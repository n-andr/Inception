[mysqld]

# The MariaDB server process will run as the 'mysql' user for security.
user = mysql

# Allow connections from any container on the same Docker network.
bind-address = 0.0.0.0

# Explicitly enable networking inside the container (disable = 1 would break WordPress connection).
skip-networking = 0

# Avoid unnecessary DNS lookups for client hostnames (improves startup and avoids DNS issues in Docker).
skip-host-cache
skip-name-resolve

# Path where MariaDB stores its data â€” mounted as a persistent volume in docker-compose.
datadir = /var/lib/mysql

# Define socket file location (used for local communication inside the container).
socket = /run/mysqld/mysqld.sock


# ---------- Client configuration ----------
[client]

# Make the client use the same socket as the server by default (helps with scripts using 'mysql' CLI).
socket = /run/mysqld/mysqld.sock